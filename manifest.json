{
    "manifest_version": 3,
    "name": "Beni Alternative Shopper",
    "version": "1.0",
    "description": "Find alternative purchasing options while browsing products on major e-commerce websites.",
    "action": {
      "default_popup": "popup.html",
      "default_title": "Beni Shopper"
    },
    "permissions": [
      "activeTab",
      "scripting",
      "storage"
    ],
    "host_permissions": [
      "https://www.amazon.com/*",
      "https://www.target.com/*",
      "https://www.walmart.com/*",
      "https://www.facebook.com/marketplace/*",
      "https://*.craigslist.org/*",
      "https://*.yourlocalstore.com/*"
    ],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": [
          "https://www.amazon.com/*",
          "https://www.target.com/*",
          "https://www.walmart.com/*",
          "https://www.facebook.com/marketplace/*",
          "https://*.craigslist.org/*",
          "https://*.yourlocalstore.com/*"
        ],
        "js": ["content.js"],
        "css": ["dist/output.css"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "icons/*.png",
          "popup.html",
          "styles.css"
        ],
        "matches": ["<all_urls>"]
      }
    ],
    "commands": {
      "_execute_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+Y",
          "mac": "Command+Shift+Y"
        }
      }
    }
  }
  