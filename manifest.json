{
  "name": "Prox Alternative Shopper",
  "version": "0.1.0",
  "description": "Find alternative purchasing options while browsing products on major e-commerce websites.",
  "permissions": ["storage", "tabs", "https://realtime.oxylabs.io/*"],
  "host_permissions": [
    "https://*.www.amazon.com/*",
    "https://*.www.target.com/*",
    "https://*.www.walmart.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.www.amazon.com/*",
        "https://*.www.target.com/*",
        "https://*.www.walmart.com/*"
      ],
      "js": ["contentScript.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*.jpg"
      ],
      "matches": [
        "https://*.www.amazon.com/*",
        "https://*.www.target.com/*",
        "https://*.www.walmart.com/*"
      ]
    }
  ],
  "action": {
    "default_icon": {
      "16": "assets/logo.jpg",
      "24": "assets/logo.jpg",
      "32": "assets/logo.jpg"
    },
    "default_title": "Prox Alternative Shopper"
  },
  "manifest_version": 3
}